<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:paddingStart="@dimen/dp_l"
    android:paddingEnd="@dimen/dp_l">

    <TextView
        android:id="@+id/text_creator"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingStart="@dimen/dp_m"
        android:paddingEnd="@dimen/dp_m"
        android:text="@string/creator"
        android:textSize="@dimen/font_l"
        android:textStyle="bold|italic"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_editor_absoluteX="12dp" />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/rv_creator"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingStart="@dimen/dp_xl"
        android:paddingEnd="@dimen/dp_xl"
        android:paddingTop="@dimen/dp_sm"
        android:paddingBottom="@dimen/dp_l"
        app:layout_constraintTop_toBottomOf="@id/text_creator"/>


</android.support.constraint.ConstraintLayout>